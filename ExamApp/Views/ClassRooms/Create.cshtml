@model ExamApp.Models.ClassRoom


@{
    ViewData["Title"] = "ClassRoom";
}

@section Css {
    <link asp-append-version="true" type="text/css" rel="stylesheet" href="~/vendor/select2/select2.min.css" />
}

@section Sole {
    <style>
        .select2-container .select2-selection {
            padding: 7px 12px 4px;
            height: 40px;
            font-size: .9125rem;
            background: #fff url('data:image/png;base64,') no-repeat right 0px center;
        }
    </style>
}

<div class="container-fluid mt-4">
    <div class="card mb-4 animated fadeIn">
        <div class="card-header p-3">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0 skewed skewed-yellow text-dark d-inline-block text-uppercase ls-1">ClassRoom</h3>
                </div>
                <div class="col text-right">
                    <a asp-action="Index" class="btn btn-back">Back</a>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Department</label>
                            <select asp-items="ViewBag.DepartmentId" class="form-control" id="departmentId" data-toggle="select">
                                <option disabled selected value="">Department</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Course Code</label>
                            <select asp-for="CourseId" id="courseId" class="form-control" data-toggle="select"></select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Teacher</label>
                            <select asp-for="TeacherId" id="teacherId" class="form-control" data-toggle="select" ></select>
                        </div>
                    </div>


                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Section</label>
                            <select asp-for="SectionId" class="form-control" id="sectionId" data-toggle="select"></select>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group mb-0">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script asp-append-version="true" type="text/javascript" src="~/vendor/select2/select2.min.js"></script>
    <script>

        $(document).ready(function () {
            $("#departmentId").on('change', function () {
                var departmentId = $("#departmentId").val();
                $('#sectionId').empty();
                $('#courseId').empty();
                $('#teacherId').empty();

                var url1 = '@Url.Action("GetTeacherCourseSectionByDepartment", "ClassRooms")';
                $.ajax({
                    type: "POST",
                    dataType: 'json',
                    url: url1,
                    data: {
                        departmentId: departmentId,
                    },
                    cache: false,

                    success: function (object) {

                        $.each(object.sections, function (index, section) {

                            $('#sectionId').append('<option value="' + section.id + '">' + section.fullName + '</option>');
                        });

                         $.each(object.courses, function (index, course) {

                             $('#courseId').append('<option value="' + course.id + '">' + course.code + '</option>');
                        });

                         $.each(object.teachers, function (index, teacher) {

                             $('#teacherId').append('<option value="' + teacher.id + '">' + teacher.name + '</option>');
                        });




                    }
                });
            });
        });

    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

