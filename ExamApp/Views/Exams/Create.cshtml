@model ExamApp.Models.Exam


@{
    ViewData["Title"] = "Exam";
}

@section Css {
    <link asp-append-version="true" type="text/css" rel="stylesheet" href="~/vendor/select2/select2.min.css" />
    <link asp-append-version="true" type="text/css" rel="stylesheet" href="~/time_picker/mdtimepicker.css" />
    <link asp-append-version="true" type="text/css" rel="stylesheet" href="~/time_picker/mdtimepicker-theme.css" />
    <link asp-append-version="true" type="text/css" rel="stylesheet" href="~/time_picker/mdtimepicker.min.css" />
}

@section Sole {
    <style>
        .select2-container .select2-selection {
            padding: 7px 12px 4px;
            height: 40px;
            font-size: .9125rem;
            background: #fff url('data:image/png;base64,') no-repeat right 0px center;
        }
    </style>
}

<div class="container-fluid mt-4">
    <div class="card mb-4 animated fadeIn">
        <div class="card-header p-3">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0 skewed skewed-yellow text-dark d-inline-block text-uppercase ls-1">Exam</h3>
                </div>
               
            </div>
        </div>
        <div class="card-body p-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Date</label>
                            <input class="form-control datepicker" name="Date" id="Date" autocomplete="off" />
                            <input asp-for="ClassRoomId" type="hidden" class="form-control" value="@ViewBag.ClassRoomId" autocomplete="off" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Exam Type</label>
                            <select asp-for="ExamTypeId" class="form-control" data-toggle="select" asp-items="ViewBag.ExamTypeId"></select>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Topic</label>
                            <input asp-for="Topic" class="form-control" />
                            <span asp-validation-for="Topic" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">From</label>
                            @*<input asp-for="From" type="time" class="form-control" />*@
                            <input asp-for="From"  class="form-control" type="text" id="timepicker1" readonly="">
                            <span asp-validation-for="From" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">To</label>
                            
                            <input asp-for="To" class="form-control" type="text" id="timepicker2" readonly="">
                            <span asp-validation-for="To" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Total Mark</label>
                            <input asp-for="TotalMark" class="form-control" />
                            <span asp-validation-for="TotalMark" class="text-danger"></span>
                        </div>
                    </div>

                     <div class="col-md-2">
                        <div class="form-group ">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Sets Available</label>
                            <input asp-for="HasSets" id="hasSetsCheckBox" class="form-control text-left" />
                            <span asp-validation-for="HasSets" class="text-danger"></span>
                        </div>
                    </div>

                      <div class="col-md-3 eachMarkDiv" style="display: none">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Each Question Mark</label>
                            <input asp-for="EachQuestionMark"class="form-control " />
                            <span asp-validation-for="EachQuestionMark" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-3 eachMarkDiv" style="display: none">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Questions in a set</label>
                            <input asp-for="TotalQuestions"class="form-control " />
                            <span asp-validation-for="TotalQuestions" class="text-danger"></span>
                        </div>
                    </div>




                    <div class="col-lg-12">
                        <div class="form-group mb-0">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script asp-append-version="true" type="text/javascript" src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/bootstrap-datepicker/bootstrap-datepicker.min.js" asp-append-version="true"></script>
    <script src="~/time_picker/mdtimepicker.js" asp-append-version="true"></script>
    <script src="~/time_picker/mdtimepicker.min.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('#timepicker1').mdtimepicker(
                {
                    format: 'hh:mm:ss',    
                });
            $('#timepicker2').mdtimepicker(
                {
                    format: 'hh:mm:ss',    
                }
            );

            $('#hasSetsCheckBox').on('change', function () {

                if ($('#hasSetsCheckBox').is(':checked')) {
                    $('.eachMarkDiv').show();
                }
                else {
                    $('.eachMarkDiv').hide();
                }
            });


        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


