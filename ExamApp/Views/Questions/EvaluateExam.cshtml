@model ExamApp.Models.StudentAnswer


@{
    ViewData["Title"] = "Questions";
}

@section Css {
    <link asp-append-version="true" type="text/css" rel="stylesheet" href="~/vendor/select2/select2.min.css" />
}

@section Sole {
    <style>
        .table tr th {
            text-align: center;
        }

        .table tr td {
            text-align: center;
        }

        .select2-container .select2-selection {
            padding: 7px 12px 4px;
            height: 40px;
            font-size: .9125rem;
            background: #fff url('data:image/png;base64,') no-repeat right 0px center;
        }
    </style>
}

<div class="container-fluid mt-4">
    <div class="card mb-4 animated fadeIn">
        <div class="card-header p-3">
            <div class="row align-items-center">
                <div class="col-md-10">
                    <h3 class="mb-0 skewed skewed-red text-dark d-inline-block text-uppercase ls-1">Name : @ViewBag.Student.Name </h3>
                      <h3 class="mb-0 skewed skewed-red text-dark d-inline-block text-uppercase ls-1">Id : @ViewBag.Student.IdNo </h3>

                    <h3 class="mb-0 skewed skewed-yellow text-dark d-inline-block text-uppercase ls-1">Course : @ViewBag.Exam.ClassRoom.Course.Code </h3>

                    <h3 class="mb-0 skewed skewed-blue text-dark d-inline-block text-uppercase ls-1">Exam : @ViewBag.Exam.ExamType.Name </h3>
                    <h3 class="mb-0 skewed skewed-green text-dark d-inline-block text-uppercase ls-1">Teacher : @ViewBag.Exam.ClassRoom.Teacher.Name </h3>

                </div>
                <div class="col-md-2 text-right">
                    <a asp-action="Index" class="btn btn-back">Back</a>
                </div>
            </div>

        </div>
        <div class="card-body p-3">
            @{
                int j = 0;
              
            }
            @foreach (var question in ViewBag.Questions)
            {
                int k = 0;

                <div class="row">



                    <input asp-for="QuestionId" hidden class="form-control" value="@question.Question.Id" />

                    @{
                        j++;

                        int i = 0;
                    }



                    @if (question.Question.QuestionTypeId == 1)
                    {

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase text-underline">Question @j : Detailed Question</label>

                            </div>
                        </div>
                    }
                    else if (question.Question.QuestionTypeId == 2)
                    {
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase  text-underline">Question @j : Multiple Choice</label>

                            </div>
                        </div>
                    }
                    else if (question.Question.QuestionTypeId == 3)
                    {
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase  text-underline">Question @j : True/False Question</label>

                            </div>
                        </div>
                    }
                    else if (question.Question.QuestionTypeId == 4)
                    {
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase  text-underline">Question @j : Fill in the Gap Question</label>

                            </div>
                        </div>
                    }
                    else
                    {

                    }
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Question</label>
                            <textarea disabled class="form-control" rows="4">@question.Question.Description</textarea>
                        </div>
                    </div>

                    @if (question.Question.QuestionTypeId == 2)
                    {
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Option 1</label>
                                <input disabled class="form-control" value="@question.Question.Opton1" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Option 2</label>
                                <input disabled class="form-control" value="@question.Question.Opton2" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Option 3</label>
                                <input disabled class="form-control" value="@question.Question.Opton3" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Option 4</label>
                                <input disabled class="form-control" value="@question.Question.Opton4" />
                            </div>
                        </div>
                    }

                    @if (question.Question.QuestionTypeId == 1)
                    {

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Given Answer</label>
                                @foreach (var answer in ViewBag.Answers)
                                {

                                    if (answer.QuestionId == question.Question.Id)
                                    {
                                        i = 1;
                                        <input value="@answer.Id" hidden class="form-control answerId" />
                                        <textarea disabled id="DetailedAnswer" name="DetailedAnswer" class="form-control" rows="4"> @answer.DetailedAnswer </textarea>
                                        break;
                                    }

                                }
                                @if (ViewBag.Answers.Count == 0 || i == 0)
                                {
                                    <textarea  disabled class="form-control btn btn-danger" rows="4">No Answer Given</textarea>
                                }


                            </div>
                        </div>

                    }
                    else if (question.Question.QuestionTypeId == 2)
                    {

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Given Answer</label>
                                @foreach (var answer in ViewBag.Answers)
                                {

                                    if (answer.QuestionId == question.Question.Id)
                                    {
                                        i = 1;
                                        string totalAnwer = "| ";

                                        <input value="@answer.Id" hidden class="form-control answerId" />

                                        @if (answer.IsOption1Correct)
                                        {
                                            totalAnwer += question.Question.Opton1 + " |";

                                        }
                                        @if (answer.IsOption2Correct)
                                        {
                                            totalAnwer += question.Question.Opton2 + " |";
                                        }
                                        @if (answer.IsOption3Correct)
                                        {
                                            totalAnwer += question.Question.Opton3 + " |";
                                        }
                                        @if (answer.IsOption4Correct)
                                        {
                                            totalAnwer += question.Question.Opton4 + " |";
                                        }
                                        if (totalAnwer == "| ")
                                        {
                                            totalAnwer = "Nothing Selected";
                                        }


                                        <textarea disabled id="GivenAnswers" name="GivenAnswers" class="form-control" rows="4"> @totalAnwer </textarea>
                                        break;
                                    }

                                }
                                @if (ViewBag.Answers.Count == 0 || i == 0)
                                {
                                    <input disabled class="form-control btn btn-danger" value="Nothing Selected" />
                                }


                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Correct Answer</label>
                                @{

                                    string totalCorrectAnwer = "| ";
                                }

                                @if (question.Question.IsOption1Correct)
                                {
                                    totalCorrectAnwer += question.Question.Opton1 + " |";

                                }
                                @if (question.Question.IsOption2Correct)
                                {
                                    totalCorrectAnwer += question.Question.Opton2 + " |";
                                }
                                @if (question.Question.IsOption3Correct)
                                {
                                    totalCorrectAnwer += question.Question.Opton3 + " |";
                                }
                                @if (question.Question.IsOption4Correct)
                                {
                                    totalCorrectAnwer += question.Question.Opton4 + " |";
                                }
                                <textarea disabled name="CorrectAnswers" class="form-control" rows="4"> @totalCorrectAnwer </textarea>


                            </div>
                        </div>
                    }
                    else if (question.Question.QuestionTypeId == 3)
                    {

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Given Answer</label>
                                @foreach (var answer in ViewBag.Answers)
                                {

                                    if (answer.QuestionId == question.Question.Id)
                                    {
                                        i = 1;
                                        <input value="@answer.Id" hidden class="form-control answerId" />
                                        @if (answer.TrueFalseAnswer == true)
                                        {
                                            <input disabled class="form-control" value="True" />

                                        }
                                        @if (answer.TrueFalseAnswer == false)
                                        {
                                            <input disabled class="form-control" value="False" />
                                        }
                                        break;
                                    }

                                }
                                @if (ViewBag.Answers.Count == 0 || i == 0)
                                {
                                    <input disabled class="form-control btn btn-danger" value="Nothing Selected" />
                                }

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Correct Answer</label>


                                @if (question.Question.TrueFalseAnswer == true)
                                {
                                    <input disabled class="form-control" value="True" />

                                }
                                @if (question.Question.TrueFalseAnswer == false)
                                {
                                    <input disabled class="form-control" value="False" />
                                }
                            </div>
                        </div>
                    }
                    else if (question.Question.QuestionTypeId == 4)
                    {

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Given Answer</label>
                                @foreach (var answer in ViewBag.Answers)
                                {

                                    if (answer.QuestionId == question.Question.Id)
                                    {
                                        i = 1;
                                        <input value="@answer.Id" hidden class="form-control answerId" />
                                        <input disabled class="form-control" value="@answer.FillInTheGapAnswer" />

                                        break;
                                    }


                                }
                                @if (ViewBag.Answers.Count == 0 || i == 0)
                                {
                                    <input disabled class="form-control btn btn-danger" value="No Answer Given" />
                                }

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Correct Answer</label>
                                <input class="form-control" disabled  value="@question.Question.FillInTheBlanksAnswer" />
                            </div>
                        </div>
                    }
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Allocated Mark</label>
                            <input class="form-control allocatedMark" disabled value="@question.Question.Mark" />
                        </div>
                    </div>



                    @foreach (var answer in ViewBag.Answers)
                    {

                        if (answer.QuestionId == question.Question.Id)
                        {
                            k = 1;
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label text-dark ls-1 text-uppercase">Obtained</label>
                                    <input class="form-control obtainedMark" value="@answer.ObtailedMark" />
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="text-center">
                                    @if (answer.Status == 0 || answer.Status==null)
                                    {
                                        <input type="button" value="Save" class="btn btn-primary mt-2 mb-3 saveButton" />
                                    }
                                    else if (answer.Status == 1)
                                    {
                                        <input type="button" value="Save Again" class="btn btn-greenyellow mt-2 mb-3 saveButton" />
                                    }


                                </div>
                            </div>


                            break;
                        }

                    }
                    @if (ViewBag.Answers.Count == 0 || k == 0)
                    {
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Obtained</label>
                                <input disabled class="form-control " value="0" />
                            </div>
                        </div>

                    }




                </div>
            }


        </div>
    </div>
</div>
@section Scripts {
    <script asp-append-version="true" type="text/javascript" src="~/vendor/select2/select2.min.js"></script>
    <script>

        $(document).ready(function () {
            $(".saveButton").on('click', function () {
                var answerId = $(this).closest('.row').find('.answerId').val();
                var obtainedMark = $(this).closest('.row').find('.obtainedMark').val();
                var allocatedMark = $(this).closest('.row').find('.allocatedMark').val();

                if (allocatedMark >= obtainedMark) {
                    var url1 = '@Url.Action("SaveAnswerMark", "Questions")';
                    $.ajax({
                        type: "POST",
                        dataType: 'json',
                        url: url1,
                        data: {
                            answerId: answerId,
                            obtainedMark: obtainedMark,
                        },
                        cache: false,
                        success: function (objects) {
                            location.reload();
                        }
                    });
                }

                else {
                    $.notify({

                        title: 'Prompt!',
                        icon: 'fa fa-times',
                        html: true,
                        message: 'Obtained mark cannot be greater than allocated mark!'
                    },
                        {
                            type: 'warning',
                            animate: {
                                enter: 'animated fadeInDown'
                            },
                            placement: {
                                from: "top",
                                align: "center"
                            },
                            spacing: 10,
                            z_index: 1031,
                            delay: 1000,
                            template: '<div data-notify="container" class="alert alert-dismissible alert-{0} alert-notify" role="alert"><span class="alert-icon" data-notify="icon"></span> <div class="alert-text"</div> <span class="alert-title" data-notify="title">{1}</span> <span data-notify="message">{2}</span></div><button type="button" class="close" data-notify="dismiss" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>'
                        });
                }

            });
        });

    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

